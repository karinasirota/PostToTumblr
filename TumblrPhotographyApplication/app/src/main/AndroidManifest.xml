<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.karisir.tumblrphotographyapplication" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.karisir.tumblrphotographyapplication.GoToTumblr"
            android:label="@string/title_activity_go_to_tumblr">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.example.karisir.tumblrphotographyapplication.MainActivity" />

        </activity>
    </application>

</manifest>
